                      .col-sm-4
                        .product-image-wrapper
                          .single-products
                            .productinfo.text-center
                              = image_tag "home/recommend#{i}.jpg"
                              h2 $56
                              p Easy Polo Black Edition
                              = link_to '#' do
                                = fa_icon 'shopping-cart'
                  .item
                    - %w(1 2 3).each do |i|
                      .col-sm-4
                        .product-image-wrapper
                          .single-products
                            .productinfo.text-center
                              = image_tag "home/recommend#{i}.jpg"
                              h2 $56
                              p Easy Polo Black Edition
                              = link_to '#' do
                                = fa_icon 'shopping-cart'

