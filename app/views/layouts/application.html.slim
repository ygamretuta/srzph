          .col-sm-9.padding-right
            .features_items
              h2.title.text-center Features Items

              - %w(1 2 3 4 5 6).each do |n|
                .col-sm-4
                  .product-image-wrapper
                    .single-products
                      .productinfo.text-center
                        = image_tag "home/product#{n}.jpg", alt: ''
                        h2 $56
                        p Easy Polo Black Edition
                        a.btn.btn-default.add-to-cart href="#"
                          = fa_icon 'shopping-cart', text: 'Add to cart'
                      .choose
                        ul.nav.nav-pills.nav-justified
                          li
                            = link_to '#' do
                              = fa_icon 'plus-square', text: 'Add to Wishlist'
